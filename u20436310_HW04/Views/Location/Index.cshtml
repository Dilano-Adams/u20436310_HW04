@model IEnumerable<Location>

@{
    ViewData["Title"] = "List of Locations";
}

<div class="row">
    <div class="col-md-8 offset-md-2">

        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.Logo)</th>
                    <th>@Html.DisplayNameFor(model => model.StreetName)</th>
                    <th>@Html.DisplayNameFor(model => model.City)</th>
                    <th>@Html.DisplayNameFor(model => model.Province)</th>
                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.Logo" alt="@item.StreetName" style="max-width: 150px" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.StreetName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.City)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Province)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                    </tr>
                    <tr>
                        <td class="align-middle">
                            <a class="btn btn-outline-info" asp-action="Add" asp-route-id="@item.Id"><i class="bi bi-eye"></i>Add </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>